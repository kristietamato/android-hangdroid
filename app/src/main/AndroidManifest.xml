<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tamato.hangdroid" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="HangDroid Singleplayer" >
        </activity>
        <activity
            android:name=".MultiplayerGameActivity"
            android:label="HangDroid Multiplayer" >
        </activity>
        <activity
            android:name=".GameOverActivity"
            android:label="Game Over" >
        </activity>
        <activity
            android:name=".Multiplayer"
            android:label="Multiplayer Game" >
        </activity>
        <activity
            android:name=".ScoresActivity"
            android:label="Score Board" >
        </activity>
    </application>

</manifest>
